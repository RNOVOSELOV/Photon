<?xml version="1.0" encoding="utf-8"?>
<xyz.rnovoselov.photon.ui.screens.splash.SplashView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FIRST SCREEN" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_splash"
            android:layout_centerHorizontal="true"
            android:text="Second" />

        <Button
            android:id="@+id/btn_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_next"
            android:layout_centerHorizontal="true"
            android:text="Third" />
    </RelativeLayout>

</xyz.rnovoselov.photon.ui.screens.splash.SplashView>